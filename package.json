{
  "name": "@smartive-education/design-system-component-library-hello-world-team",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com",
    "tag": "latest"
  },
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:types build:css",
    "build:types": "tsc -p ./tsconfig.json --declaration",
    "build:css": "tailwindcss build ./src/global.css -o ./dist/global.css",
    "build-storybook": "build-storybook",
    "dev:css": "tailwindcss -w -i ./src/global.css -o ./public/global.css",
    "storybook": "start-storybook -p 6006",
    "storybook-windows": "set NODE_OPTIONS=\"--openssl-legacy-provider\" && start-storybook -p 6006",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write \"**/*.+(js|jsx|tsx|json|css|md)\""
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@smartive/eslint-config": "^3.1.1",
    "@smartive/prettier-config": "^3.0.0",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-docs": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack4": "^6.5.13",
    "@storybook/manager-webpack4": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "eslint": "^8.31.0",
    "eslint-plugin-react": "^7.31.11",
    "postcss": "^8.4.19",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.3"
  }
}
